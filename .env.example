# Financial Analysis Environment Configuration

# Python Environment
PYTHON_VERSION=3.8+

# Application Settings
LOG_LEVEL=INFO
LOG_FORMAT='%(asctime)s - %(levelname)s - %(message)s'

# File Paths (Optional - if you want to set default paths)
# DEFAULT_TEMPLATE_PATH=
# DEFAULT_DATA_PATH=
# DEFAULT_OUTPUT_PATH=

# Excel Processing Settings
EXCEL_ENGINE=openpyxl
MAX_ROWS=10000
CHART_DPI=300

# DCF Analysis Settings
DEFAULT_DISCOUNT_RATE=0.10
DEFAULT_TERMINAL_GROWTH_RATE=0.025
PROJECTION_YEARS=5

# Visualization Settings
FIGURE_SIZE_WIDTH=12
FIGURE_SIZE_HEIGHT=8
MATPLOTLIB_BACKEND=TkAgg

# API Keys for Task Master AI and MCP servers
# At least one API key is required for Task Master to function

# Claude models (Recommended)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Research features (Highly recommended for --research flag)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Optional: Additional model providers
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
XAI_API_KEY=your_xai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
OLLAMA_API_KEY=your_ollama_api_key_here